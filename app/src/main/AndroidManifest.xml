<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lionsclub.com.directoryapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>


    <application
        android:name="app.DirectoryApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme">
        <activity
            android:name="app.Login.LoginActivity"
            android:icon="@drawable/menu"
            android:label="@string/login_activity_title"
            android:logo="@drawable/menu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.Dashboard.Dashboard"
            android:icon="@android:drawable/ic_dialog_dialer"
            android:label="@string/login_activity_title"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="app.Member.MemberActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:icon="@android:drawable/ic_dialog_dialer"
            android:label="@string/title_activity_member"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.admin.CredentialRequest"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_credential_request"></activity>

        <activity
            android:name="app.Dashboard.BnrDetailActivity"
            android:icon="@android:drawable/ic_dialog_dialer"
            android:label="@string/login_activity_title"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="app.Member.UpdateUsernameActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:icon="@android:drawable/ic_dialog_dialer"
            android:label="@string/title_activity_member"
            android:screenOrientation="portrait" />

        <activity
            android:name="app.Member.UpdatePasswordActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:icon="@android:drawable/ic_dialog_dialer"
            android:label="@string/title_activity_member"
            android:screenOrientation="portrait" />

    </application>

</manifest>

            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text=":" />

        <EditText
            android:id="@+id/individual_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="Alt Phone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text=":" />

        <EditText
            android:id="@+id/individual_altPhone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="Alt Mobile"
             />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text=":" />

        <EditText
            android:id="@+id/individual_altMobile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="Email"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text=":" />

        <EditText
            android:id="@+id/individual_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="Alt Email"
             />

        <TextView
            android:layout_width="0dp"

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context="com.antonioleiva.mvpexample.app.Dashboard.Dashboard"
    android:gravity="center">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.antonioleiva.mvpexample.app.Dashboard.Dashboard"
    android:gravity="center">

    <TextView
        android:layout_width="fill_parent"
        android:text="UPDATE USERNAME"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etCurrent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="Current Username"
        />

    <TextView
        android:id="@+id/tvisavail"
        android:layout_width="fill_parent"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etNew"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_marginTop="5dp"
        android:hint="New Username"
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="textPassword"
        android:imeOptions="actionNext"
        android:layout_marginTop="5dp"
        android:hint="Password"
        />

    <ImageView
        android:id="@+id/ivCaptcha"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:layout_marginTop="5dp"
        android:id="@+id/BtnRefresh" />

    <EditText
        android:id="@+id/etCaptcha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_marginTop="5dp"
        android:hint="Captcha"
        />
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#3f66c3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Submit"
        android:textColor="#ffffff"
        android:visibility="visible" />


</LinearLayout>
    </ScrollView>
